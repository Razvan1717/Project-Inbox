{% extends 'base.html.twig' %}

{% block body %}
    <h1>Group</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Groupname</th>
                <td>{{ group.groupName }}</td>
            </tr>
            <tr>
                <th>Persons of this group:</th>
                <td>
                {% for person in group.persons %}
                    <li><a href="../{{ person.id }}">{{ person.firstName }} {{ person.lastName }}</a></li>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('groups_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('groups_edit', { 'id': group.id }) }}">Edit</a>
        </li>

        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
